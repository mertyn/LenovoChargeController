<Window x:Class="LenovoController.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LenovoController"
        mc:Ignorable="d"
        Title="Lenovo Controller" SizeToContent="WidthAndHeight" ResizeMode="CanMinimize" x:Name="mainWindow"
        FontSize="14">
    <StackPanel Margin="25">
        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock>Current charge:&#160;</TextBlock>
            <TextBlock Name="ChargeState">69</TextBlock>
            <TextBlock>%</TextBlock>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock>Charge to:&#160;</TextBlock>
            <TextBox Name="ChargeGoal" Text="80" TextAlignment="Right"></TextBox>
            <TextBlock>%</TextBlock>
        </StackPanel>
        <StackPanel Margin="10">
            <RadioButton IsChecked="True">Normal Charge</RadioButton>
            <RadioButton>Rapid Charge</RadioButton>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock>Status:&#160;</TextBlock>
            <TextBlock Name="Status">Idle</TextBlock>
        </StackPanel>
        <Button Name="StartStop" Click="OnStartStop">Start</Button>
    </StackPanel>
</Window>